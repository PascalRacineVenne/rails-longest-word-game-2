<div class="container">
  <h1>Let the game begin</h1>

  <ul class="letter_list">
    <% @letters.each do |letter| %>
      <li class="letters"><%= letter %></li>
    <% end %>
  </ul>

  <form action="/score" method="post" class="form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" placeholder="What is the longest word you can find?" class="input">
    <input type="submit" value="PLAY" class="btn">
  </form>
</div>